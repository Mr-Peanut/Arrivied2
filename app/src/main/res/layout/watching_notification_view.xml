<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/background_shape">
    <ImageView
        android:id="@+id/cover_image"
        android:src="@drawable/bus_station"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:minHeight="160dp"
        android:scaleType="centerInside"
        android:contentDescription=""
        tools:ignore="ContentDescription" />
    <TextView
        android:padding="25dp"
        android:id="@+id/station_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/cover_image"
        android:layout_toRightOf="@+id/cover_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/notification_tittle"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/cancel_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/station_info"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:text="@string/notification_cancle" />

</RelativeLayout>